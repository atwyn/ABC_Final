<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/dgrey"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/header1"/>



    <Button
        android:text="530 * 400"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:drawableRight="@drawable/nextf"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorblack"
        android:textSize="24sp"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:id="@+id/buttonrs4"
        android:layout_below="@+id/buttonrs3"
        android:layout_alignStart="@+id/buttonrs3"
        android:layout_marginTop="10dp"
        android:layout_width="680px" />

    <Button
        android:text="450 * 300"
        android:drawableRight="@drawable/nextf"
        android:layout_height="wrap_content"
        android:id="@+id/buttonrs3"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorblack"
        android:textSize="24sp"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/buttonrs2"
        android:layout_alignStart="@+id/buttonrs2"
        android:layout_marginTop="10dp"
        android:layout_width="680px" />

    <Button
        android:text="400 * 400"
        android:drawableRight="@drawable/nextf"
        android:layout_height="wrap_content"
        android:id="@+id/buttonrs2"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorblack"
        android:textSize="24sp"
        android:typeface="normal"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/buttonrs1"
        android:layout_alignStart="@+id/buttonrs1"
        android:layout_marginTop="10dp"
        android:layout_width="680px" />

    <Button
        android:text="500 * 600"
        android:drawableRight="@drawable/nextf"


        android:layout_height="wrap_content"
        android:id="@+id/buttonrs1"

        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorblack"
        android:textSize="24sp"
        android:typeface="normal"
        android:fontFamily="sans-serif"

        android:layout_marginTop="10dp"
        android:layout_below="@+id/buttonws"
        android:layout_alignStart="@+id/buttonws"
        android:layout_width="680px" />

    <TextView
        android:text="Select Product By Size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:gravity="center"


        android:layout_marginTop="20px"
        android:typeface="normal"


        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textColor="@color/cred" />

    <Button
        android:text="VIEW ALL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:gravity="center"
        android:background="@color/cred"
        android:textColor="@color/white"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/buttonrs4"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="400 * 500"
        android:id="@+id/buttonws"
        android:drawableRight="@drawable/nextf"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorblack"
        android:textSize="24sp"

        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20px"
        android:layout_width="680px"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

